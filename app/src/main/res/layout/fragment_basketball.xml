<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/basketballImageInfoId"
        android:layout_width="380dp"
        android:layout_height="280dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/basketball" />
    <TextView
        android:text="Basketball"
        android:gravity="center"
        android:layout_width="311dp"
        android:layout_height="45dp"
        android:id="@+id/basketballinfo" android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
        android:textColor="@android:color/black" android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        app:layout_constraintTop_toBottomOf="@+id/basketballImageInfoId" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="48dp" android:layout_marginRight="48dp"/>

    <TextView
        android:layout_width="304dp"
        android:layout_height="190dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:text="Basketball is a game played between two teams of five players each on a rectangular court, usually indoors. Each team tries to score by tossing the ball through the opponent's goal, an elevated horizontal hoop and net called a basket."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/basketballinfo"
        app:layout_constraintTop_toBottomOf="@+id/basketballinfo" />


</androidx.constraintlayout.widget.ConstraintLayout>
